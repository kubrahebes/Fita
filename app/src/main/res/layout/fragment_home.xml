<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="com.example.user.fita.fragments.HomeFragment">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e9f5f0"
        tools:context="com.example.recodedharran.deneme.MainActivity">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:src="@drawable/kiziicon"
            android:id="@+id/imageView" />

        <TextView
            android:id="@+id/edit_text_one"
            android:layout_width="230dp"
            android:layout_height="50dp"
            android:layout_alignLeft="@+id/edit_text_two"
            android:layout_alignStart="@+id/edit_text_two"
            android:layout_alignTop="@+id/imageView"
            android:layout_marginTop="88dp"
            android:background="#e9f5f0"
            android:text="name"
            android:textColor="#1c825d"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/edit_text_two"
            android:layout_width="230dp"
            android:layout_height="50dp"
            android:layout_below="@+id/edit_text_one"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="40dp"
            android:background="#e9f5f0"
            android:text="calori"
            android:textColor="#1c825d"
            android:textSize="16sp"
            />

        <TextView
            android:layout_width="230dp"
            android:layout_height="50dp"
            android:layout_below="@+id/edit_text_two"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="40dp"
            android:background="#e9f5f0"
            android:text="index"
            android:textColor="#1c825d"
            android:textSize="16sp"/>

    </RelativeLayout>

</RelativeLayout>